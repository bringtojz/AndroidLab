<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SetPriceActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/btnBack"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/orange"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/appbar"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Set Price"
                app:titleTextColor="@color/white"
                android:background="@color/orange" />
        </android.support.design.widget.AppBarLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edtBranchID"
            android:inputType="textCapCharacters"
            android:maxLength="4"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:hint="BRANCH"
            android:layout_margin="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnSetPrice"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edtBranchID"
            android:background="@drawable/btn_shadow"
            android:layout_margin="10dp"
            android:text="Set Price"
            android:textColor="@color/white"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"
            android:hint="แก้ราคาใน POS"
            android:textSize="60dp"
            android:gravity="center"/>

    </RelativeLayout>



</LinearLayout>